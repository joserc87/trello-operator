{
    "manifest_version": 2,

    "name": "Trello Operator",
    "short_name": "Trello Operator",
    "description": "RP trello plugin - Expands stories and more",
    "version": "1.0.0.1",

    "icons": {
        "512": "icon-512.png",
        "128": "icon-128.png"
    },

    "content_scripts": [
        {
            "all_frames": true,
            "matches": ["https://trello.com/*"] ,
            "js": [
                "lib/jquery.min.js",
                "trello-operator.js"
            ],
            "css": [
                "trello-operator.css"
            ]
        }
    ],
    "web_accessible_resources": [
        "lib/jquery-2.1.0.min.map"
    ]

}
